headernav(){
    .header {
  width: 100%;
  height: 1.5rem;
  background: url('../../../static/img/2.png') no-repeat center;
  background-size: 100%;
  position: relative;
  overflow: hidden;
}

.input {
  width: 70%;
  height: 0.7rem;
  margin: 0.57rem auto;
  line-height: 0.7rem;
  display: flex;
  overflow: hidden;
  background: $bgcolor;
  opacity 0.7;
  border-radius: 7px;
}

.input input {
  flex: 1;
  height: 90%;
  margin-top: 2px;
  outline: none;
  padding: 0 0.2rem;
background: $bgcolor;
  opacity 0.7;
}

.input span {
  width: 12%;
  height: 0.7rem;
  text-align: center;
}

.input span img {
  width: 0.4rem;
  height: 0.42rem;
  margin-bottom: 0.15rem;
}
}